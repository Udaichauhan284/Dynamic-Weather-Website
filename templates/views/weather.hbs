<!DOCTYPE html>
<html lang="en">
<head>
  <!-- header links by express partials-->
    {{>headerLink}}
</head>
<body>
    <!-- navbar by express partials -->
    {{>navbar}}

    <!--Main header-->
    <div class="main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="container-fluid main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter City Name." autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div> 

                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Monday</p>
                        <p id="today_date">21 DEC</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get weather details here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" ariea-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--footer by epxree partials-->
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const day = document.getElementById('day');
        const today_date =document.getElementById('today_date');
        const getCurrentDay = () => {
        var weekday = new Array(7);
        weekday[0] = "Sunday";
        weekday[1] = "Monday";
        weekday[2] = "Tuesday";
        weekday[3] = "Wednesday";
        weekday[4] = "Thursday";
        weekday[5] = "Friday";
        weekday[6] = "Saturday";

        let currentTime = new Date();
        let days = weekday[currentTime.getDay()];
        return days;
      };
      const getCurrentTime = () => {
        var now = new Date();
        var months = new Array(12);
        months[0] ="JAN";
        months[1] ="FEB";
        months[2] ="MAR";
        months[3] ="APR";
        months[4] ="MAY";
        months[5] ="JUNE";
        months[6] ="JULY";
        months[7] ="AUG";
        months[8] ="SEP";
        months[9] ="OCT";
        months[10] ="NOV";
        months[11] ="DEC";
        var month=months[now.getMonth()];
        var date = now.getDate();
        return `${month} ${date}`;
      };

      day.innerHTML = getCurrentDay();
      today_date.innerHTML = getCurrentTime();
      </script>

</body>
</html>